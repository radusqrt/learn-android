<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:padding="10dp"
                android:id="@+id/image_label"
                android:layout_width="200dp"
                android:layout_height="100dp" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:id="@+id/name_label"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:id="@+id/category_label"
                android:layout_below="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:id="@+id/periodicity_label"
                android:layout_below="@+id/category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:id="@+id/area_label"
                android:layout_below="@+id/periodicity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_below="@id/image_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_marginLeft="10dp"
                    android:id="@+id/book_checkbox"
                    android:layout_alignParentBottom="true"
                    android:text="Book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:layout_toRightOf="@id/book_checkbox"
                    android:id="@+id/cd_checkbox"
                    android:layout_alignParentBottom="true"
                    android:text="CD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_weight="1"
                        android:src="@drawable/ic_add_black_24dp"
                        android:id="@+id/add_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0"
                        android:id="@+id/number_of_copies"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/remove_button"
                        android:src="@drawable/ic_remove_black_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>